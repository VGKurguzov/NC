<ui:UiBinder xmlns:ui = 'urn:ui:com.google.gwt.uibinder'
             xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'
             xmlns:res = 'urn:with:com.UIBinder.client.LoginResources'>

    <ui:with type = "com.UIBinder.client.LoginResources" field = "res">
    </ui:with>


    <gwt:HTMLPanel>
        <div align = "center">



            <gwt:VerticalPanel res:styleName = "background">
                <gwt:Label text = "Login" res:styleName = "blackText" />
                <gwt:TextBox ui:field="loginBox" res:styleName = "box" />
                <gwt:Label text = "Password" res:styleName = "blackText" />
                <gwt:PasswordTextBox ui:field = "passwordBox" res:styleName = "box" />
                <gwt:HorizontalPanel verticalAlignment = "middle">
                    <gwt:Button ui:field = "buttonSubmit" text="Submit"
                                res:styleName = "loginButton" />
                    <gwt:CheckBox ui:field = "myCheckBox" />
                    <gwt:Label ui:field = "myLabel" text = "Remember me"
                               res:styleName = "blackText" />
                </gwt:HorizontalPanel>

                <gwt:Label ui:field = "completionLabel1" res:styleName = "blackText" />
                <gwt:Label ui:field = "completionLabel2" res:styleName = "blackText" />
            </gwt:VerticalPanel>

        </div>
    </gwt:HTMLPanel>

</ui:UiBinder>